//- mixin para inputs
 
mixin opciones(...items)
	form.col-sm-6.radio.mg-c
		each item in items
			input.mg-b(type='radio')
			p= item
mixin letras(...items)
	ul.col-sm-6.text-right.pd-c
		each item in items
			li.list-inline.mg-b= item		
